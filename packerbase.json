{
    "builders": [
    {
        "type": "virtualbox-iso",
        "guest_os_type": "{{user `vbox_guestos`}}",
        "iso_url": "{{user `iso_url`}}",
        "iso_checksum": "{{user `iso_checksum`}}",
        "iso_checksum_type": "{{user `iso_checksum_type`}}",
        "vboxmanage": [
            [
            "modifyvm",
            "{{.Name}}",
            "--memory",
            "2048"
            ],
            [
            "modifyvm",
            "{{.Name}}",
            "--vram",
            "48"
            ],
            [
            "modifyvm",
            "{{.Name}}",
            "--cpus",
            "2"
            ]
        ],
        "output_directory": "./temp/output-{{user `vm_name`}}",
        "vm_name": "{{user `vm_name`}}",
        "guest_additions_mode": "attach",
        "headless": "{{user `headless` }}",
        "communicator": "winrm",
        "winrm_username": "vagrant",
        "winrm_password": "vagrant",
        "winrm_timeout": "12h",
        "shutdown_command": "cmd.exe /c c:\\shutdown.cmd",
        "shutdown_timeout": "{{user `shutdown_timeout`}}",
        "floppy_files": [
            "VMTools\\virtualbox\\VMTools.ps1",
            "osconfig\\{{user `vm_name`}}\\Autounattend.xml",
            "osconfig\\{{user `vm_name`}}\\config.psd1",
            "osconfig\\{{user `vm_name`}}\\postunattend.xml",
            "scripts\\00-bootstrap.cmd",
            "Scripts\\00-FirstRun.ps1",
            "Scripts\\setupcomplete.cmd",
            "scripts\\shutdown.cmd"
        ]
    }
    ],
    "provisioners": [
        {
            "type": "powershell",
            "inline": "&c:\\vmtools.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant",
            "environment_vars": [
                "guestos={{user `vm_name`}}",
                "patchvm={{user `patchvm`}}",
                "cleanvm={{user `cleanvm`}}"
            ]
        },
        {
            "type": "windows-restart",
            "restart_timeout": "1h"
        },
        {
            "type": "powershell",
            "script": "scripts/01-InstallServicePack.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant",
            "environment_vars": [
                "guestos={{user `vm_name`}}",
                "patchvm={{user `patchvm`}}",
                "cleanvm={{user `cleanvm`}}"
            ],
            "valid_exit_codes": [0, 3010]
        },
        {
            "type": "windows-restart",
            "restart_timeout": "2h"
        },
        {
            "type": "powershell",
            "script": "scripts/02-FixWindowsUpdate.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant",
            "environment_vars": [
                "guestos={{user `vm_name`}}",
                "patchvm={{user `patchvm`}}",
                "cleanvm={{user `cleanvm`}}"
            ],
            "valid_exit_codes": [
                0,
                1,
                2,
                3,
                5,
                10,
                15,
                3010
            ]
        },
        {
            "type": "windows-restart",
            "restart_timeout": "2h"
        },
        {
            "type": "powershell",
            "script": "scripts/03-InstallRollup.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant",
            "environment_vars": [
                "guestos={{user `vm_name`}}",
                "patchvm={{user `patchvm`}}",
                "cleanvm={{user `cleanvm`}}"
            ],
            "valid_exit_codes": [
                0,
                1,
                2,
                3,
                5,
                10,
                15,
                3010
            ]
        },
        {
            "type": "windows-restart",
            "restart_timeout": "2h"
        },
        {
            "type": "powershell",
            "script": "scripts/04-InstallUpdates.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant",
            "environment_vars": [
                "guestos={{user `vm_name`}}",
                "patchvm={{user `patchvm`}}",
                "cleanvm={{user `cleanvm`}}"
            ],
            "valid_exit_codes": [
                0,
                1,
                2,
                3,
                5,
                10,
                15,
                3010
            ]
        },
        {
            "type": "windows-restart",
            "restart_timeout": "2h"
        },
        {
            "type": "powershell",
            "script": "scripts/04-InstallUpdates.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant",
            "environment_vars": [
                "guestos={{user `vm_name`}}",
                "patchvm={{user `patchvm`}}",
                "cleanvm={{user `cleanvm`}}"
            ],
            "valid_exit_codes": [
                0,
                1,
                2,
                3,
                5,
                10,
                15,
                3010
            ]
        },
        {
            "type": "windows-restart",
            "restart_timeout": "2h"
        },
        {
            "type": "powershell",
            "script": "scripts/04-InstallUpdates.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant",
            "environment_vars": [
                "guestos={{user `vm_name`}}",
                "patchvm={{user `patchvm`}}",
                "cleanvm={{user `cleanvm`}}"
            ],
            "valid_exit_codes": [
                0,
                1,
                2,
                3,
                5,
                10,
                15,
                3010
            ]
        },
        {
            "type": "windows-restart",
            "restart_timeout": "2h"
        },
        {
            "type": "powershell",
            "script": "scripts/05-InstallWMF5.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant",
            "environment_vars": [
                "guestos={{user `vm_name`}}",
                "patchvm={{user `patchvm`}}",
                "cleanvm={{user `cleanvm`}}"
            ],
            "valid_exit_codes": [
                0,
                1,
                2,
                3,
                5,
                10,
                15,
                3010
            ]
        },
        {
            "type": "windows-restart",
            "restart_timeout": "1h"
        },
        {
            "type": "powershell",
            "script": "CM/{{user `cm`}}/installcm.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant",
            "environment_vars": [
                "guestos={{user `vm_name`}}",
                "patchvm={{user `patchvm`}}",
                "cleanvm={{user `cleanvm`}}"
            ],
            "valid_exit_codes": [
                0,
                1,
                2,
                3,
                5,
                10,
                15,
                3010
            ]
        },
        {
            "type": "powershell",
            "script": "scripts/06-Clean.ps1",
            "elevated_user": "vagrant",
            "elevated_password": "vagrant",
            "environment_vars": [
                "guestos={{user `vm_name`}}",
                "patchvm={{user `patchvm`}}",
                "cleanvm={{user `cleanvm`}}"
            ]
        }
    ],
    "post-processors" : [
        {
            "type" : "vagrant",
            "keep_input_artifact": false,
            "output": "./box/{{user `vm_name`}}-{{user `boxtag`}}-{{user `cm`}}-{{.Provider}}.box",
            "vagrantfile_template": "vagrantfile.template"
        }
    ]
}



